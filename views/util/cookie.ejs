	<form class="bs-docs-example" id="setcookie">
	<div class="input-append">
	  <input class="span2" type="text" value='xitao'>
	  <button class="btn" type="button">setcookie</button>
	</div>
	<span>默认设置xitao的cookie值</span>
</form>
<form class="bs-docs-example" id="getcookie">
	<div class="input-append">
	  <input class="span2" type="text" value='xitao'>
	  <button class="btn" type="button">getcookie</button>
	</div>
	<span></span>
</form>
<form class="bs-docs-example" id="delcookie">
	<div class="input-append">
	  <input class="span2" type="text" value='xitao'>
	  <button class="btn" type="button">delcookie</button>
	</div>
</form>
<script type="text/javascript">
	var $setcookieForm = $("#setcookie");
	var $getcookieForm = $("#getcookie");
	var $delcookieForm = $("#delcookie");
	$setcookieForm.find("button").click(function(){
		var _val = $(this).prev().val();
		XT.util.cookie.setCookie("xitao",_val);
		$getcookieForm.find("span").html('<span>已设置xitao的值为'+ _val +'</span>');
	});
	$getcookieForm.find("button").click(function(){
		var _val = $(this).prev().val();
		getCookie(_val);
	});
	$delcookieForm.find("button").click(function(){
		var _val = $(this).prev().val();
		XT.util.cookie.delCookie("xitao");
	});
	function getCookie(key){
		var keyValue = XT.util.cookie.getCookie(key);
		if(!!keyValue){
			$getcookieForm.find("span").html('<span>xitao的值为<strong class="text-error">'+XT.util.cookie.getCookie("xitao")+'</strong></span>');
		}else {
			$getcookieForm.find("span").html('<span>没有名为'+key+'的cookie值</span>');
		}
	};
	getCookie("xitao");
</script>
